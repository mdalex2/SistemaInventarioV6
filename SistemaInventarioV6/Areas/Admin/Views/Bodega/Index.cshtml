@model IEnumerable<SistemaInventarioV6.Modelos.Bodega>
<div class="content-header row">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Listado de Bodegas</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">                        
                    <li class="breadcrumb-item active">
                        <a id="btnNew" class="btn btn-primary"><i class="fas fa-plus"></i> Agregar</a>
                    </li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="p-4 border rounded" style="width:100%;">
    <table id="tblDatos" class="table table-responsive- table-hover text-nowrap" style="width:100%">
        <thead class="bg-gradient-gray-dark text-white">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="bg-white"></tbody>
    </table>
</div>

<div class="modal" id="ventana_modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="ventana_modal_title" class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="ventana_modal_body" class="modal-body">
                
            </div>
            <div hidden id="ventana_modal_footer" class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        //var urlUpsert = "/Admin/Bodega/Upsert/";
    </script>
    
    <script src="~/js/bodega.js"></script>
}