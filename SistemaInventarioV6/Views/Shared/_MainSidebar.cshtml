<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a  asp-area="" asp-controller="Home" asp-action="Index" class="brand-link">
        <img src="~/lib/AdminLTE-3.2.0/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Menú Opciones</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/lib/AdminLTE-3.2.0/dist/img/icon-user.png" class="img-circle elevation-2"width="160" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@Environment.UserName</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <li class="nav-item menu-open">
                    <a href="#" class="nav-link active">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        <p>
                            Contenido
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Bodega" asp-action="Index" class="nav-link">
                                <i class="fas fa-building"></i>
                                <p>Bodega</p>
                            </a>
                        </li> 
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Categoria" asp-action="Index" class="nav-link">
                                <i class="fas fa-th-list"></i>
                                <p>Categorias</p>
                            </a>
                        </li> 
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Marca" asp-action="Index" class="nav-link">
                                <i class="fas fa-tags"></i>
                                <p>Marcas</p>
                            </a>
                        </li> 
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Producto" asp-action="Index" class="nav-link">
                                <i class="fab fa-product-hunt"></i>
                                <p>Productos</p>
                            </a>
                        </li> 
                    </ul>
                </li>                
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>